@model IR_Hub.Models.Comment

<h2 class="text-center mt-5">Adaugare comentariu</h2>
<br />


<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            <form asp-action="New" asp-controller="Comment" method="post">
                <input type="hidden" asp-for="BookmarkId" />
                <input type="hidden" asp-for="UserId" />


                <div class="form-group">
                    <label asp-for="Content" class="form-label">Impartaseste-ti gandurile</label>
                    <br />
                    <textarea asp-for="Content" class="form-control"></textarea>

                    <span asp-validation-for="Content" class="text-danger"></span>

                    <br /><br />
                </div>

                <button class="btn btn-success" type="submit">Adauga Comentariu</button>

            </form>
        </div>
    </div>
</div>


