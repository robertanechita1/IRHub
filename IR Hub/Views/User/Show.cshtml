<head>
    <link rel="stylesheet" href="/css/site.css">
</head>


<div class="container mt-5">
    <div class="text-center">
        <!-- Poza de profil -->
        <img src="@Model.Profile_image ?? " https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQ9eLeSj523CsBb4S2TNM4BZ-8TuObk0YsoaFQVvATuYEGEXLqxjIqAxOJh0z2xgU1kPzc&usqp=CAU""
             alt="Profile Image"
             class="rounded-circle"
             style="width: 150px; height: 150px; object-fit: cover;">

        <div id="viewProfile" class="mt-3 text-center">
            <h4>
                <span>@Model.FirstName</span> <span>@Model.LastName</span>
            </h4>

            <h5 class="text-muted">@Model.UserName</h5>

            <!-- Afișează butoanele de editare si stergere dacă este utilizatorul curent sau admin -->
            @if (ViewBag.AfisareButoane)
            {
                <div class="d-flex justify-content-center">
                    <a class="btn btn-warning btn-sm me-2" href="@Url.Action("Edit", "User", new { id = Model.Id })">Editează Profil</a>
                    <form action="@Url.Action("Delete", "User", new { id = Model.Id })" method="post" class="d-inline">
                        <button type="submit" class="btn btn-danger btn-sm">Șterge Contul</button>
                    </form>
                    
                </div>
                
                <a class="nav-link" href="@Url.Action("New", "Bookmark")">Adaugă Bookmark</a>
                
                <a class="nav-link" href="@Url.Action("New", "Category")">Adaugă Categorie</a>
            }

            <div class="mt-4">
                <h5>Despre mine</h5>
                <p>@Model.About</p>
            </div>
        </div>
        <div>
            @foreach (var categ in ViewBag.UserCategories)
            {
                <span>@categ.Name</span>
            }
        </div>
    </div>
</div>


