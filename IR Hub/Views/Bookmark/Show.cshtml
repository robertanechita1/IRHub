
<h2 class="text-center mt-5">Detalii Articol: @Model.Title</h2>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Detalii despre articol -->
            <div class="card mb-4">
                <div class="card-header">
                    <strong>Postat de: @Model.User.UserName</strong>
                    <br />
                    <small>@Model.Date_created.ToString("dd/MM/yyyy")</small>
                </div>
                <div class="card-body">
                    <h5 class="card-title">@Model.Title</h5>
                    <p class="card-text">@Model.Description</p>
                    @if (!string.IsNullOrEmpty(Model.Media_Content))
                    {
                        <div class="media-content">
                            <iframe src="@Model.Media_Content" width="100%" height="400px" frameborder="0"></iframe>
                        </div>
                    }
                </div>
                <div class="card-footer text-muted">
                    <span>Voturi: @Model.VotesCount | Comentarii: @Model.CommentsCount</span>
                        <div class="d-flex justify-content-between">
                                <!-- Secțiunea pentru Like și Dislike -->
                                <div class="d-flex">
                                    <form asp-action="New" asp-controller="Vote" method="post" class="d-inline me-2">
                                        <input type="hidden" name="BookmarkId" value="@Model.Id" />
                                        <input type="hidden" name="UserId" value="@User.FindFirst("sub")?.Value" />
                                        <button type="submit" name="VoteType" value="Like" class="btn btn-success btn-sm">Like</button>
                                    </form>

                                    <form asp-action="New" asp-controller="Vote" method="post" class="d-inline">
                                        <input type="hidden" name="BookmarkId" value="@Model.Id" />
                                        <input type="hidden" name="UserId" value="@User.FindFirst("sub")?.Value" />
                                        <button type="submit" name="VoteType" value="Dislike" class="btn btn-danger btn-sm">Dislike</button>
                                    </form>
                                </div>

                            @if (ViewBag.EsteAdmin || Model.UserId == ViewBag.UserCurent)
                            {
                                <!-- Secțiunea pentru Editează și Șterge -->
                                <div class="d-flex justify-content-end">
                                    <a class="btn btn-warning btn-sm me-2" href="@Url.Action("Edit", "Bookmark", new { id = Model.Id })">Editează</a>
                                    <form action="@Url.Action("Delete", "Bookmark", new { id = Model.Id })" method="post" class="d-inline">
                                        <button type="submit" class="btn btn-danger btn-sm">Șterge</button>
                                    </form>
                                </div>
                            }
                        </div>
                    
                </div>
            </div>


            <!-- Comentarii -->
            <h4>Comentarii (@Model.CommentsCount)</h4>
            @foreach (var comment in Model.Comments)
            {
                <div class="media mb-3">
                    <img class="mr-3" src="https://www.gravatar.com/avatar/@comment.User.Email.GetHashCode()" alt="user" width="50" height="50">
                    <div class="media-body">
                        <h5 class="mt-0">@comment.User.UserName</h5>
                        <p>@comment.Content</p>
                        <small>@comment.Date_created.ToString("dd/MM/yyyy HH:mm")</small>
                        <div class="d-flex justify-content-end">
                        @if (comment.UserId == ViewBag.UserCurent) 
                        {
                            <div class="mt-2">
                                <a asp-controller="Bookmark" asp-action="EditComment" asp-route-id="@comment.Id" class="btn btn-sm btn-primary">Edit</a>
                                <a asp-controller="Bookmark" asp-action="DeleteComment" asp-route-id="@comment.Id" class="btn btn-sm btn-danger" method="post">Delete</a>
                            </div>
                        }
                        </div>
                        
                    </div> 
                </div>
            }


            <!-- Adaugă comentariu -->
            <form asp-action="Show" asp-controller="Bookmark" method="post" class="d-inline me-2">
                <input type="hidden" name="BookmarkId" value="@Model.Id" />
                <div class="form-group">
                     <label for="CommentContent">Comentariul tău:</label>
                     <textarea id="CommentContent" name="Cont" class="form-control" rows="3" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Adaugă Comentariu</button>
            </form>

        </div>
    </div>
</div>
